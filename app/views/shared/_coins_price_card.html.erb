<section class="mb-16">
 <h2 class="mb-8 text-3xl font-bold tracking-tight text-slate-800">Precios de Monedas</h2>
 
 <div class="overflow-hidden bg-white shadow-lg rounded-2xl">
   <div class="px-6 py-8 bg-gradient-to-r from-emerald-50 to-emerald-100">
     <h3 class="text-2xl font-semibold text-center text-emerald-600">
       <%= t('coins_card.alert') %>
     </h3>
   </div>
   
   <div class="grid grid-cols-1 gap-8 p-6 md:grid-cols-3">
     <% Coins.all.each do |coin| %>
       <div class="relative p-6 transition-all duration-300 bg-white border border-emerald-100 group rounded-xl hover:shadow-md hover:border-emerald-500">
         <div class="flex items-center mb-4 space-x-4">
           <div class="<%= coin.name == 'Oro' ? 'text-amber-400' : coin.name == 'Plata' ? 'text-gray-400' : 'text-orange-400' %> 
                       p-3 rounded-full bg-opacity-10 <%= coin.name == 'Oro' ? 'bg-amber-100' : coin.name == 'Plata' ? 'bg-gray-100' : 'bg-orange-100' %>">
             <i class="text-3xl fas fa-coins"></i>
           </div>
           <h4 class="text-xl font-semibold text-gray-900"><%= coin.name %></h4>
         </div>
         
         <div class="space-y-3">
           <div class="flex items-center justify-between">
             <span class="text-gray-600">Compra:</span>
             <span class="text-lg font-medium text-gray-900">
               $<%= number_with_precision(coin.purchase_price, precision: 2) %>
             </span>
           </div>
           <div class="border-t border-gray-100"></div>
           <div class="flex items-center justify-between">
             <span class="text-gray-600">Venta:</span>
             <span class="text-lg font-medium text-gray-900">
               $<%= number_with_precision(coin.selling_price, precision: 2) %>
             </span>
           </div>
         </div>
       </div>
     <% end %>
   </div>
 </div>
</section>