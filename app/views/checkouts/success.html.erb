<div class="container mx-auto px-4 py-8">
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
    <h1 class="text-2xl font-bold mb-2">Thank you for your order!</h1>
    <% if @order %>
      <p>Order confirmation sent to: <%= @order.customer_email %></p>
      <p>Order ID: <%= @order.id %></p>
      <p>Total: $<%= @order.total %></p>
    <% end %>
  </div>
  
  <div class="mt-8">
    <%= link_to 'Continue Shopping', root_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>